<!DOCTYPE html>
<html>
  <head>
    <title>Apna Accountant</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Quicksand:wght@300&display=swap");
    </style>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@1,100&display=swap");
    </style>
    <style>
      .main__budgetheding {
        background-color: #270082;
        color: white;
        box-shadow: 0.2rem 0.2rem 10px burlywood;
      }
      .main__budgetheding ul li {
        display: inline-block;
      }
      .color {
        color: red;
      }
    </style>
  </head>

  <body>
    <div class="header">
      <div class="dropdown">
        <button id="myBtn" class="dropbtn">
          <img src="img/icons/icons8-menu-48.png" />
        </button>
        <div id="myDropdown" class="dropdown-content">
          <a href="/">Home</a>
          <a href="/transactions">Transactions</a>
          <a href="/splitmoney">Spilt money</a>
          <a href="/giveborrow">Give and Borrow</a>
          <a href="/aboutus">About Us</a>
          <a href="/logout">Sign out</a>
        </div>
      </div>
      <h1 class="header__name">अपना Accountant</h1>
      <div class="header__menu">
        <ul>
          <li>Contact Us</li>
          <a href="/register"><li>Sign In</li></a>
        </ul>
      </div>
    </div>
    <div class="main">
      <div class="main_icons">
        <div class="div_icons">
          <a href="/transactions/newexpense">
            <img src="img/icons/books.png" alt="study" class="icons"
          /></a>
          Education
        </div>
        <div class="div_icons">
          <a href="/transactions/newexpense">
            <img
              src="img/icons/Food and Drinks.png"
              alt="Food and Drink"
              class="icons"
            /> </a
          >Food
        </div>
        <div class="div_icons">
          <a href="/transactions/newexpense">
            <img src="img/icons/gas-pump.png" alt="Fuel" class="icons" /> </a
          >Fuel
        </div>
        <div class="div_icons">
          <a href="/transactions/newexpense">
            <img
              src="img/icons/groceries.png"
              alt="groceries"
              class="icons"
            /> </a
          >Groceries
        </div>
        <div class="div_icons">
          <a href="/transactions/newexpense">
            <img
              src="img/icons/grocery-cart.png"
              al
              t="groceries-cart"
              class="icons"
            /> </a
          >General
        </div>
        <div class="div_icons">
          <a href="/transactions/newexpense">
            <img src="img/icons/invoice.png" alt="bills" class="icons" /></a
          >Bill
        </div>
        <div class="div_icons">
          <a href="/transactions/newexpense">
            <img src="img/icons/plane.png" alt="travel" class="icons" /></a
          >Travel
        </div>
        <div class="div_icons">
          <a href="/transactions/newexpense">
            <img
              src="img/icons/popcorn.png"
              alt="Entertainment"
              class="icons" /></a
          >Entertainment
        </div>
        <div class="div_icons">
          <a href="/transactions/newexpense">
            <img
              src="img/icons/shopping-bag.png"
              alt="shopping"
              class="icons"
            /> </a
          >Shopping
        </div>
      </div>
      <div class="main__budget text-center">
        <h2 class="main__budgetheding">This Month</h2>
        <ul>
          <li>Expenses</li>
          <h1><%= sum %></h1>
          <li>Income</li>
          <h1>10000</h1>

          <li>Balance</li>
          <% if(10000-sum<5000) {%>
          <h3 class="color">Your balance is low</h3>
          <% } %>
          <h1><%= 10000 - sum %></h1>
        </ul>
      </div>
      <h1 class="text-center" id="recent_tran">Recent Transactions</h1>
      <div class="text-center">
        <a class="btn btn-success" href="/transactions">All transactions</a>
      </div>
      <div>
        <% for(let transaction of transactions) {%>
        <div class="text-center">
          <h4>
            Amount: <%= transaction.amount %> Category:<%=
            transaction.category%>
          </h4>
        </div>
      </div>

      <% } %>
      <div class="main__analysis text-center">
        <h1 id="analysis">Analysis</h1>
        <ul>
          <a href="analysis1"><li>Analysis</li></a>
        </ul>
      </div>
    </div>

    <script>
      document.getElementById("myBtn").onclick = function () {
        myFunction();
      };

      function myFunction() {
        document.getElementById("myDropdown").classList.toggle("show");
      }
    </script>
  </body>
</html>
